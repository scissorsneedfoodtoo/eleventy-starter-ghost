{% set nextPageRegExp = r/\/\d+\/$/g %}

{% if pagination.nextPageHref %}
    {% if nextPageRegExp.test(pagination.nextPageHref) %}
        <div class="read-more-row">
            <button id="readMoreBtn">{% t 'buttons.load-more-articles' %}</button>
        </div>

        {% set js %}
            {% include "js/pagination.js" %}
        {% endset %}
        <script>{{ js | jsmin | safe }}</script>
    {% endif %}
{% endif %}
